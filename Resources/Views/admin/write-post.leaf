#extend("admin/base")

#export("page-title") { New Post } 

#export("content") {
<form class="pure-form" action="/admin/write-post" method="post">
    <fieldset class="pure-g">
        <input type="text" class="pure-u-1" name="title" placeholder="Title">
    </fieldset>

    <fieldset class="pure-group">
        <textarea class="pure-input-1" name="text"></textarea>
    </fieldset>

    <button type="submit" class="pure-button pure-button-primary">Submit</button>
</form>
}