#extend("admin/base")

#export("page-title") { Posts }
#export("content") {
<table class="pure-table" width="100%">
    <thead>
        <tr>
            <th>标题</th>
            <th width="20%">日期</th>
        </tr>
    </thead>

    <tbody>
        #loop(posts, "post") {
        <tr>
            <td>#(post.title)</td>
            <td>#(post.date)</td>
        </tr>
        }
    </tbody>
</table>
}
